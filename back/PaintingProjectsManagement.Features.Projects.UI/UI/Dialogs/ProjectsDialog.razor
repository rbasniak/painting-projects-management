@using MudBlazor
@using PaintingProjectsManagement.UI.Modules.Shared
@using PaintingProjectsManagement.UI.Modules.Projects

@namespace PaintingProjectsManagement.UI.Modules.Projects.UI.Dialogs

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="Project.Name" Label="Name" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public ProjectDetails Project { get; set; } = new();

    [CascadingParameter] public MudBlazor.IMudDialogInstance? MudDialog { get; set; }

    private void Submit() 
    {
        MudDialog?.Close(DialogResult.Ok(Project));
    }
    
    private void Cancel() 
    {
        MudDialog?.Cancel();
    }
} 