@using MudBlazor
@using PaintingProjectsManagement.UI.Modules.Projects
@using PaintingProjectsManagement.UI.Modules.Shared

@namespace PaintingProjectsManagement.UI.Modules.Projects.UI.Dialogs

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Edit Execution Step</MudText>
            <MudText Typo="Typo.body2">Step Type: @Step.Step.Value</MudText>
            
            <MudDatePicker @bind-Date="stepDate" 
                          Label="Date" 
                          Variant="Variant.Outlined"
                          Required="true" />
            
            <MudTimePicker @bind-Time="stepTime" 
                          Label="Time" 
                          Variant="Variant.Outlined"
                          Required="true" />
            
            <MudNumericField @bind-Value="durationInHours" 
                            Label="Duration (hours)" 
                            Variant="Variant.Outlined"
                            Min="0.01"
                            Step="0.25"
                            HelperText="Duration in decimal hours (e.g., 1.5 = 1h 30m)"
                            Immediate="true" />
            
            <MudStack Row="true" Spacing="2" Justify="Justify.Center">
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Secondary" 
                          Size="Size.Large"
                          OnClick="() => AdjustDuration(-1)">-1h</MudButton>
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Secondary" 
                          Size="Size.Large"
                          OnClick="() => AdjustDuration(-0.5)">-30m</MudButton>
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Secondary" 
                          Size="Size.Large"
                          OnClick="() => AdjustDuration(-0.25)">-15m</MudButton>
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Secondary" 
                          Size="Size.Large"
                          OnClick="() => AdjustDuration(0.25)">+15m</MudButton>
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Secondary" 
                          Size="Size.Large"
                          OnClick="() => AdjustDuration(0.5)">+30m</MudButton>
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Secondary" 
                          Size="Size.Large"
                          OnClick="() => AdjustDuration(1)">+1h</MudButton>
            </MudStack>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled">Save</MudButton>
        <MudButton OnClick="Cancel" Size="Size.Large">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public ProjectStepDetails Step { get; set; } = default!;
    [Parameter] public string ProjectId { get; set; }
    
    [CascadingParameter] public MudBlazor.IMudDialogInstance? MudDialog { get; set; }
    [Inject] public IProjectsService ProjectsService { get; set; } = default!;
    [Inject] public ISnackbar Snackbar { get; set; } = default!;

    private DateTime? stepDate;
    private TimeSpan? stepTime;
    private double durationInHours;

    protected override void OnInitialized()
    {
        stepDate = Step.Date.Date;
        stepTime = Step.Date.TimeOfDay;
        durationInHours = Step.DurationInHours;
    }

    private void AdjustDuration(double delta)
    {
        durationInHours = Math.Max(0.01, durationInHours + delta);
    }

    private async Task Submit()
    {
        try
        {
            if (!stepDate.HasValue || !stepTime.HasValue)
            {
                Snackbar.Add("Please select both date and time", Severity.Warning);
                return;
            }

            var dateTime = stepDate.Value.Date.Add(stepTime.Value);

            var request = new UpdateProjectStepRequest
            {
                ProjectId = new Guid(ProjectId),
                StepId = Step.Id,
                Date = dateTime,
                DurationInHours = durationInHours
            };

            await ProjectsService.UpdateProjectStepAsync(request, default);
            Snackbar.Add("Step updated successfully", Severity.Success);
            MudDialog?.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error updating step: {ex.Message}", Severity.Error);
        }
    }
    
    private void Cancel()
    {
        MudDialog?.Cancel();
    }
}