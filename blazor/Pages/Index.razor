@page "/"

<PageTitle>Home - Painting Projects Management</PageTitle>

<MudText Typo="Typo.h3" Class="mb-4">Welcome to Painting Projects Management</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Class="ma-2">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Materials</MudText>
                    <MudText Typo="Typo.body2">Manage your painting materials</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIcon Icon="@Icons.Material.Filled.Build" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">View and manage all your painting materials including paints, brushes, and other supplies.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="materials">View Materials</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard Class="ma-2">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Models</MudText>
                    <MudText Typo="Typo.body2">Manage your models and categories</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIcon Icon="@Icons.Material.Filled.Palette" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">Organize your models and model categories for better project management.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="models">View Models</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard Class="ma-2">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Projects</MudText>
                    <MudText Typo="Typo.body2">Manage your painting projects</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIcon Icon="@Icons.Material.Filled.Assignment" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">Track and manage all your painting projects with detailed information.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="projects">View Projects</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid> 