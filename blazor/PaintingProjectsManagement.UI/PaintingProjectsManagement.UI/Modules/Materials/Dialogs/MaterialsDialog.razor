@using PaintingProjectsManagement.UI.Modules.Shared
<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Material.Name" Label="Name" />
        <MudSelect @bind-Value="Material.Unit.Value" Label="Unit">
            @foreach (var unit in UnitTypes)
            {
                <MudSelectItem Value="@unit.Value">@unit.Value</MudSelectItem>
            }
        </MudSelect>
        <MudNumericField @bind-Value="Material.PricePerUnit" Label="Price per Unit" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public MaterialDetails Material { get; set; }
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Inject] IMaterialsService MaterialsService { get; set; }

    public List<EnumReference> UnitTypes => [];

    async Task Submit()
    {
        MudDialog.Close(DialogResult.Ok(Material));
    }

    void Cancel() => MudDialog.Cancel();
}
