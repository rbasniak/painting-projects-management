@page "/models/classification"

@using MudBlazor
@using Microsoft.AspNetCore.Components.Web
@using PaintingProjectsManagement.UI.Modules.Models
@using System
@using System.Collections.Generic
@using System.Linq
@using System.Threading
@using Microsoft.JSInterop

@implements IAsyncDisposable

@inject IJSRuntime JsRuntime
@inject IModelsService ModelsService

<MudContainer Class="viewer-container" MaxWidth="MaxWidth.False">

    <MudText Typo="Typo.h5" Class="mb-2">Model Classification</MudText>

    <!-- Stage: arrows + big image -->
    <div class="stage">
        <button type="button" class="nav-zone left" @onclick="Prev">
            <MudIcon Icon="@Icons.Material.Filled.ChevronLeft" Class="nav-icon" />
        </button>

        <div class="image-box">
            @if (!string.IsNullOrWhiteSpace(CurrentImageUrl))
            {
                <img src="@GetPictureAddress(CurrentImageUrl)" alt="model" class="main-image" />
            }
            else
            {
                <MudPaper Class="placeholder" Elevation="1">No models available</MudPaper>
            }
        </div>

        <button type="button" class="nav-zone right" @onclick="Next">
            <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Class="nav-icon" />
        </button>
    </div>

    <!-- Controls: rating + criteria -->
    <MudPaper Class="controls" Elevation="1">
        <div class="rating-row">
            <MudText Typo="Typo.h6" Class="mr-2">Rating</MudText>
            <MudRating Class="rating-xl"
                       MaxValue="5"
                       Size="Size.Large"
                       SelectedValue="@_state.Rating"
                       SelectedValueChanged="OnRatingChanged" />
        </div>

        <div class="criteria-grid">
            <div class="criteria-group">
                <MudText Typo="Typo.subtitle1" Class="mb-1">Base Size</MudText>
                <MudRadioGroup T="BaseSizeOption" Value="@_state.BaseSize" ValueChanged="OnBaseSizeChanged" Orientation="Orientation.Horizontal">
                    <MudRadio T="BaseSizeOption" Value="BaseSizeOption.Small" Size="Size.Large" Label="Small" />
                    <MudRadio T="BaseSizeOption" Value="BaseSizeOption.Medium" Size="Size.Large" Label="Medium" />
                    <MudRadio T="BaseSizeOption" Value="BaseSizeOption.Big" Size="Size.Large" Label="Big" />
                </MudRadioGroup>
            </div>

            <div class="criteria-group">
                <MudText Typo="Typo.subtitle1" Class="mb-1">Figure Size</MudText>
                <MudRadioGroup T="FigureSizeOption" Value="@_state.FigureSize" ValueChanged="OnFigureSizeChanged" Orientation="Orientation.Horizontal">
                    <MudRadio T="FigureSizeOption" Value="FigureSizeOption.Small" Size="Size.Large" Label="Small" />
                    <MudRadio T="FigureSizeOption" Value="FigureSizeOption.Medium" Size="Size.Large" Label="Medium" />
                    <MudRadio T="FigureSizeOption" Value="FigureSizeOption.Big" Size="Size.Large" Label="Big" />
                </MudRadioGroup>
            </div>

            <div class="criteria-group">
                <MudText Typo="Typo.subtitle1" Class="mb-1">Number of Figures</MudText>
                <MudRadioGroup T="NumberOfFiguresOption" Value="@_state.NumberOfFigures" ValueChanged="OnNumberOfFiguresChanged" Orientation="Orientation.Horizontal">
                    <MudRadio T="NumberOfFiguresOption" Value="NumberOfFiguresOption.One" Size="Size.Large" Label="1" />
                    <MudRadio T="NumberOfFiguresOption" Value="NumberOfFiguresOption.Two" Size="Size.Large" Label="2" />
                    <MudRadio T="NumberOfFiguresOption" Value="NumberOfFiguresOption.ThreePlus" Size="Size.Large" Label="3+" />
                </MudRadioGroup>
            </div>

            <div class="criteria-group">
                <MudCheckBox T="bool" @bind-Checked="@MustHave" Size="Size.Large" Label="Must have" />
            </div>
        </div>
    </MudPaper>
</MudContainer>

@code {

    private IReadOnlyCollection<ModelDetails> _models = [];
    private int _index = 0;
    private readonly Dictionary<Guid, ModelClassificationState> _states = new();

    private ModelClassificationState _state = new();

    private IJSObjectReference? _keysModule;
    private IJSObjectReference? _keysHandle;
    private IDisposable? _selfRef; // holds DotNetObjectReference for cleanup

    private ModelDetails? CurrentModel => (_models.Count == 0) ? null : _models.ElementAt(_index);

    private bool MustHave
    {
        get => _state.MustHave;
        set
        {
            if (_state.MustHave != value)
            {
                _state.MustHave = value;
                _ = OnMustHaveChanged(value);
            }
        }
    }

    private string? CurrentImageUrl
    {
        get
        {
            if (CurrentModel is null)
            {
                return null;
            }

            // Prefer cover; fallback to first picture
            if (!string.IsNullOrWhiteSpace(CurrentModel.CoverPicture))
            {
                return CurrentModel.CoverPicture;
            }

            if (CurrentModel.Pictures is not null && CurrentModel.Pictures.Length > 0)
            {
                return CurrentModel.Pictures[0];
            }

            return null;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        var selfRef = DotNetObjectReference.Create(this);
        _selfRef = selfRef;

        _keysModule = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "/js/model-viewer-keys.js");
        _keysHandle = await _keysModule.InvokeAsync<IJSObjectReference>("attach", selfRef);
    }

    protected override async Task OnInitializedAsync()
    {
        _models = await ModelsService.GetAllAsync(default);

        LoadStateForCurrentModel();
    }

    [JSInvokable] 
    public void JsPrev() 
    { 
        Prev(); 
    }

    [JSInvokable] 
    public void JsNext() 
    { 
        Next(); 
    } 

    private void Next()
    {
        if (_models.Count == 0)
        {
            return;
        }

        _index = (_index + 1) % _models.Count;

        LoadStateForCurrentModel();
    }

    private void Prev()
    {
        if (_models.Count == 0)
        {
            return;
        }

        _index = (_index - 1 + _models.Count) % _models.Count;

        LoadStateForCurrentModel();
    }

    private void LoadStateForCurrentModel()
    {
        if (CurrentModel is null)
        {
            return;
        }

        if (!_states.TryGetValue(CurrentModel.Id, out var state))
        {
            state = new ModelClassificationState();
            _states[CurrentModel.Id] = state;
        }

        _state = state;

        StateHasChanged();
    }

    private string GetPictureAddress(string url)
    {
        return $"https://localhost:7236{url}";
    }

    private async Task OnRatingChanged(int value)
    {
        _state.Rating = value;

        // TODO: implement
    }

    private async Task OnBaseSizeChanged(BaseSizeOption value)
    {
        _state.BaseSize = value;
        
        // TODO: implement
    }

    private async Task OnFigureSizeChanged(FigureSizeOption value)
    {
        _state.FigureSize = value;
        
        // TODO: implement
    }

    private async Task OnNumberOfFiguresChanged(NumberOfFiguresOption value)
    {
        _state.NumberOfFigures = value;
        
        // TODO: implement
    }

    private async Task OnMustHaveChanged(bool value)
    {
        _state.MustHave = value;
        
        // TODO: implement
    }

    public async ValueTask DisposeAsync()
    {
        if (_keysHandle is not null)
        {
            await _keysHandle.InvokeVoidAsync("dispose");
        }

        if (_keysModule is not null)
        {
            await _keysModule.DisposeAsync();
        }

        _selfRef?.Dispose();
    }


    private sealed class ModelClassificationState
    {
        public int Rating { get; set; } = 0;
        public BaseSizeOption BaseSize { get; set; } = BaseSizeOption.Medium;
        public FigureSizeOption FigureSize { get; set; } = FigureSizeOption.Medium;
        public NumberOfFiguresOption NumberOfFigures { get; set; } = NumberOfFiguresOption.One;
        public bool MustHave { get; set; } = false;
    }

    private enum BaseSizeOption { Small, Medium, Big }
    
    private enum FigureSizeOption { Small, Medium, Big }
    
    private enum NumberOfFiguresOption { One, Two, ThreePlus }
}

