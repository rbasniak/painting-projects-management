@using MudBlazor
@using PaintingProjectsManagement.UI.Modules.Models
@using PaintingProjectsManagement.UI.Modules.Shared

@namespace PaintingProjectsManagement.UI.Modules.Models.UI.Dialogs

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="Category.Name" Label="Name" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public ModelCategoryDetails Category { get; set; } = new();

    [CascadingParameter] public MudBlazor.IMudDialogInstance? MudDialog { get; set; }

    private void Submit() 
    {
        MudDialog?.Close(DialogResult.Ok(Category));
    }
    
    private void Cancel() 
    {
        MudDialog?.Cancel();
    }
}
